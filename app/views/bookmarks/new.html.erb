<div style="margin-left: 10px;">
  <h1>Add a movie</h1>
  <%= simple_form_for [@list, @bookmark], html: { class: 'custom-form' } do |f| %>
    <div class="form-group">
      <%= f.input :comment, class: 'form-control custom-input' %>
    </div>
    <div class="form-group">
      <%= f.association :movie, class: 'form-control custom-input' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Add movie to list', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
